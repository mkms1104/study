<included>
    <property name="LOG_PATTERN" value="[%d{yyyy-MM-dd HH:mm:ss}] %red([%thread]) %highlight(%-5level) %logger{15} %msg%n"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
</included>